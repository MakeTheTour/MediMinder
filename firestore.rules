
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Function to check if a user is an admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email.matches('.*@mediminder\\.com');
    }

    // Function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      // Admins can read/write any user document
      allow read, write: if isAdmin();
      
      // Users can create, read, update, and delete their own document
      allow create: if isOwner(userId);
      allow read, update, delete: if isOwner(userId);

      // Subcollections rules
      match /{subcollection}/{docId} {
        // Admins have full access to all subcollections
        allow read, write: if isAdmin();
        
        // Users can read/write to their own subcollections
        allow read, write: if isOwner(userId);
      }
    }
  }
}
