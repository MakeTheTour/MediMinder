
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin() {
      return request.auth.token.email.matches('.*@mediminder.com$');
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can create their own document (e.g., on sign-up)
      // They can read, update their own document.
      // Admins can read any user document.
      allow read, update: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid == userId;

      // Rules for user-specific sub-collections
      match /{subcollection}/{docId} {
        // Users can perform any action on documents in their own subcollections.
        allow read, write, delete, create: if request.auth.uid == userId;
      }
    }
  }
}
