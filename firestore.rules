
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@mediminder.com';
    }

    match /{document=**} {
      allow read, write: if isAdmin();
    }

    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /invitations/{invitationId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (resource.data.inviterId == request.auth.uid || resource.data.inviteeEmail == request.auth.token.email);
      allow update, delete: if request.auth != null && (resource.data.inviterId == request.auth.uid || resource.data.inviteeId == request.auth.uid)
    }

    match /invitations/{invitationId} {
        allow list: if request.auth != null && (request.query.where.inviterId == request.auth.uid || request.query.where.inviteeEmail == request.auth.token.email);
    }
    
    match /ads/{adId} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}
