rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only access their own data, recursively.
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for invitations
    match /invitations/{invitationId} {
      // Allow reading a specific invitation if you are the inviter or invitee
      allow get: if request.auth != null && (resource.data.inviterId == request.auth.uid || resource.data.inviteeEmail == request.auth.token.email);
      
      // Allow querying the collection if filtering by inviterId (for sent) or inviteeEmail (for received)
      allow list: if request.auth != null && (request.query.resource.data.inviterId == request.auth.uid || request.query.resource.data.inviteeEmail == request.auth.token.email);
      
      // Allow creating an invitation if you are the inviter
      allow create: if request.auth != null && request.resource.data.inviterId == request.auth.uid;
      
      // Allow updating or deleting if you are the inviter or the (accepted) invitee
      allow update, delete: if request.auth != null && (resource.data.inviterId == request.auth.uid || resource.data.inviteeId == request.auth.uid);
    }
    
    // Ads can be read by anyone, but only written by an admin
    match /ads/{adId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'admin@mediminder.com';
    }

    // Subscriptions can only be accessed by an admin
     match /subscriptions/{subId} {
      allow read, write: if request.auth != null && request.auth.token.email == 'admin@mediminder.com';
    }
    
    // API settings can only be accessed by an admin
    match /settings/api {
        allow read, write: if request.auth != null && request.auth.token.email == 'admin@mediminder.com';
    }
  }
}
